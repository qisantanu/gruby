<div id="date_range_modal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Select Date Range</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <div class="modal-body">
        <div class="d-flex justify-content-between date-picker-filed-set">
          <div class="form-group flex-column align-items-start">
            <label for="start_date">Start Date:</label>
            <%= text_field_tag :start, nil, placeholder: 'Select Date', class: "form-control date-range-input datepicker" %>
          </div>

          <div class="form-group flex-column align-items-start">
            <label for="end_date">End Date:</label>
            <%= text_field_tag :end, nil, placeholder: 'Select Date', class: "form-control date-range-input datepicker" %>
          </div>

        </div>

        <p class='error'></p>
      </div>

      <div class="modal-footer justify-content-center button-group">
        <%= button_tag 'Continue', class: 'btn btn-primary js-confirm-date-range', id: "confirm_ok_button" %>
        <%= button_tag 'Cancel', class: 'btn btn-secondary', data: { dismiss: 'modal' } %>
      </div>
    </div>
  </div>
</div>
